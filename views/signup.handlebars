<div class="wrapper">
    <header>
        <h1>FIGHT ON!</h1>

<div class="signup-page">
  <div class="signup-card">
    <div class="signup-wrap">
      <div class="signup-card-header">
        <h2>Sign up now!</h2>
      </div>
      <form class="signup-form">
        <div><input class="field" type="text" id="firstname-signup" placeholder="enter first name" /></div>
        <div><input class="field" type="text" id="lastname-signup" placeholder="enter last name" /></div> 
        <div><input class="field" type="text" id="email-signup" placeholder="enter e-mail address" /></div>
        <div><input class="field" type="text" id="gamertag-signup" placeholder="put your gamertag" /></div>
        <div><input class="field" type="password" id="password-signup" placeholder="create a password" /></div>
        <div><input class="field" type="platforms" id="platforms-signup" placeholder="what platform do you play on?" /></div>
        <div>button type="submit" class="signup-btn">Sign Up!</button></div>
        <button id="logout" class="btn-no-style">Logout</button>
      </form>
    </div>
  </div>
</div>

<script src="/public/js/create.js"></script>